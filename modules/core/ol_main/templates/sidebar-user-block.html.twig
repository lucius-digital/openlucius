{#
/**
* @file
* Default theme implementation to display a block.
*
* @see template_preprocess_block()
*
* @ingroup themeable
*/
#}
<div class="mr-2">
  <img class="rounded-circle" src="{{ vars.user_picture }}" alt="" height="35">
</div>
<div class="ml-2">
  <div class="h6 m-0">
    <button class="btn btn-link dropdown-toggle" type="button" id="useroptions-drop" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <span class="username">
        {{ vars.username|length > 13 ? vars.username|slice(0, 13) ~ '..' : vars.username  }} <i class="fa fa-chevron-down"></i>
      </span>
    </button>
    <div class="dropdown-menu dropdown-menu-left" aria-labelledby="useroptions-drop" >
      <a class="dropdown-item" href="/user/{{ vars.uid }}/edit">{{ 'Manage My Profile'|t }}</a>
      <div class="dropdown-divider"></div>
      <a class="dropdown-item" href="/user/logout">{{ 'Logout'|t }}</a>
    </div>
  </div>
</div>
