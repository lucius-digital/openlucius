<tr>
  <td>
    <div class="media">
      {% if vars.thumbnail_url %}
        <a href="{{ vars.url }}" ><img class="mr-3 rounded" src="{{ vars.thumbnail_url }}" alt="tn"></a>
      {% elseif vars.file_type == 'text_doc' %}
        <i class="fas fa-file-alt"></i>
      {% else %}
        <i class="fas fa-file"></i>
      {% endif %}
      <div class="media-body">
        <h5 class="mt-0"><a href="{{ vars.url }}">{{ vars.filename }}</a></h5>
        <span class="text-muted">
          <span class="badge badge-light"> {{ 'by'|t }}: {{ vars.user_name }} </span>
          <span class="badge badge-light"> {{ vars.created|date("d M Y H:i") }} </span>
          {% if vars.file_size %}<span class="badge badge-light"> {{ vars.file_size }} </span>{% endif %}
          {% if vars.foldername %}
            <span class="badge badge-light"><i class="fas fa-folder"></i> {{ vars.foldername }}</a></span>
          {% endif %}
        </span>
        {% if vars.owner == TRUE %}
            <button class="btn btn-link dropdown-toggle" type="button" id="ol-drop2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <i class="fa fa-ellipsis-h"></i>
            </button>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="ol-drop2">
              {% if vars.has_folders %}
                <button class="dropdown-item" data-toggle="modal" data-target="#putFileInFolderModal"
                    data-name="{{ vars.filename }}"
                    data-folder_id="{{ vars.folder_id }}"
                    data-file_id="{{ vars.id }}"
                ><i class="fas fa-folder-plus"></i> {{ 'Put in Folder'|t }}</button>
              {% endif %}
              {% if vars.id_folder %}
                <button class="dropdown-item" data-toggle="modal" data-target="#removeFileFromFolder"
                    data-file_id="{{ vars.id }}"
                    data-file_name="{{ vars.filename }}"
                    data-folder_name="{{ vars.foldername }}"
                ><i class="fas fa-folder-minus"></i> {{  'Remove From'|t }} '{{ vars.foldername }}'</button>
              {% endif %}
              <button class="dropdown-item" data-toggle="modal" data-target="#removeFile"
                    data-name="{{ vars.filename }}"
                    data-ol_fid="{{ vars.ol_fid }}"
                    data-file_type="{{ vars.file_type }}"
              ><i class="fas fa-times"></i> {{ 'Remove'|t }}</button>
            </div>
        {% endif %}
      </div>
    </div>
  </td>
</tr>
