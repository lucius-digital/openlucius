<li class="media">
  <img class="mr-3 rounded-circle" src="{{ vars.user_picture_url }}" alt="Image" height="30">
  <div class="media-body">
    <h6 class="mt-0 mb-1">{{ vars.user_name }}
      <span class="badge badge-light comment">
         {{ vars.created }}
      </span>
    </h6>
      {{ vars.stream_body }}
      {% if vars.path %}
        <a href="{{ vars.path }}" class="stream-inline-link">{{ 'View'|t }}</a>
      {% endif %}
    {% if vars.files %}
      {% for file in vars.files  %}
        <a href="{{ file.file_path }}" class="stream-inline-link">{{ file.file_name }}</a>
        {% if not loop.last %},{% endif %}
      {% endfor %}
    {% endif %}
  </div>
</li>
