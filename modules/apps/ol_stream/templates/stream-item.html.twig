<div class="media text-muted pt-3">
  <img class="mr-2 rounded-circle" src="{{ vars.user_picture_url }}" alt="   " height="32">
  <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
    <strong class="d-block text-gray-dark">
      <a href="/user/{{ vars.uid }}/profile" class="username text-muted">{{ vars.user_name }}</a>
      <span class="badge badge-pill badge-light float-right text-muted">{{ vars.created }}</span></strong>
    {% if vars.group_name %}
      <span class="badge badge-secondary"><i class="lni lni-users"> </i> {{ vars.group_name }}</span>
    {% endif %}
    <i class="{{ vars.icon_class }}"> </i>
    {% if vars.path and vars.link_label %}
      <a href="{{ vars.path }}" class="stream-inline-link"><i> {{ vars.link_label|raw }}</i> </a>
      <i class="lni lni-arrow-right"></i>
    {% endif %}
      <span class="text-black-50"> {{ vars.body_text_label }}:</span>
      <i>{{ vars.stream_body }}</i>
    {% if vars.path and vars.link_label is empty %}
      <a href="{{ vars.path }}" class="stream-inline-link">{{ 'View'|t }}</a>
    {% endif %}
    {% if vars.files %}
      {% for file in vars.files  %}
        <a href="{{ file.file_path }}" class="stream-inline-link">{{ file.file_name }}</a>
        {% if not loop.last %},{% endif %}
      {% endfor %}
    {% endif %}
  </p>
</div>
